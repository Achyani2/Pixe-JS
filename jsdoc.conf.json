{
  "tags": {
    "allowUnknownTags": false
  },
  "source": {
    "include": [
      "packages/core/lib/",
      "packages/tween/lib"
    ],
    "excludePattern": "(node_modules|test)"
  },
  "plugins": [
    "plugins/markdown",
    "@pixi/jsdoc-template/plugins/es6-fix"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    },
    "applicationName": "PixiJS",
    "footer": "Made with ♥ by Shukant Pal <silcostech@outlook.com>",
    "copyright": "Shukant Pal Copyright © 2020",
    "disqus": "",
    "openGraph": {
      "title": "",
      "type": "website",
      "image": "",
      "site_name": "",
      "url": ""
    },
    "meta": {
      "title": "PuxiJS API Documentation",
      "description": "Documentation for PixiJS UI Library (PuxiJS)",
      "keyword": "docs, documentation, pixi, pixijs, renderer, html5, javascript, jsdoc, puxi, puxijs"
    },
    "linenums": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": false
  },
  "opts": {
    "encoding": "utf8",
    "recurse": true,
    "lenient": true,
    "destination": "./dist/docs",
    "template": "./node_modules/@pixi/jsdoc-template"
  }
}